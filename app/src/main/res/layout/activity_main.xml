<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_linear_layout_manager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Linear Layout Manager"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_relative_layout_manager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Relative Layout Manager"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_header_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Header Section"
        tools:ignore="HardcodedText" />
</LinearLayout>