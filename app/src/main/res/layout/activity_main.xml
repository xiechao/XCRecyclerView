<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:ignore="Overdraw">

    <Button
        android:id="@+id/btn_linear_layout_manager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Linear Layout Manager"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_relative_layout_manager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Relative Layout Manager"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_pinned_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pinned Section"
        tools:ignore="HardcodedText" />


    <Button
        android:id="@+id/btn_linear_layout_swipe_manager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Linear Layout Swipe Manager"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_pinned_section_swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pinned Section Swipe"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_observable_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Observable Recycler View"
        tools:ignore="HardcodedText" />
</LinearLayout>